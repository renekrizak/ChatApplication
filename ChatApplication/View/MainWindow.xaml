<Window x:Class="ChatApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatApplication"
        xmlns:viewmodel="clr-namespace:ChatClient.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280"
        Name="myMainWindow">

    <Window.DataContext>
        <viewmodel:MainViewModel/>
    </Window.DataContext>

    <Grid Name="MainGrid" SizeChanged="MainGrid_SizeChanged">
        <Grid.LayoutTransform>
            <ScaleTransform x:Name="ApplicationScaleTransform"
                        CenterX="0"
                        CenterY="0"
                        ScaleX="{Binding ElementName=myMainWindow, Path=ScaleValue}"
                        ScaleY="{Binding ElementName=myMainWindow, Path=ScaleValue}" />
        </Grid.LayoutTransform>
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Height="80">
           <!--# <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" Text="Welcome to chat app"
                       FontFamily="Metropolis" FontSize="48"/>
            <Button Style="{StaticResource MainButtonStyle}" MaxWidth="400" MaxHeight="40"/>
            <Button Style="{StaticResource MainButtonStyle}" MaxWidth="400" MaxHeight="40" Margin="0 120 0 0"/> -->
            <TextBlock FontSize="20" Text="Hello World" Margin="5" VerticalAlignment="Top" HorizontalAlignment="Center"/>
            <Button Content="Log-in via existing account" VerticalAlignment="Bottom" HorizontalAlignment="Center"
                    Style="{StaticResource MainButtonStyle}"/>
        </Grid>
    </Grid>
</Window>
